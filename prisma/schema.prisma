datasource db {
    provider = "postgresql"
    url = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-py"
    interface = "asyncio"
    recursive_type_depth = 5
}

model User {
    @@map("users")

    id          Int         @id @default(autoincrement())
    uid         String      @unique
    email       String      @unique
    hash        String
    salt        String
    last_access DateTime    @default(now())
    created_at  DateTime    @default(now())
    updated_at  DateTime    @updatedAt
    deleted_at  DateTime?
}
